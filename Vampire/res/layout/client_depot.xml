<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/c_take_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_take" />

    <ImageButton
        android:id="@+id/c_depot_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_depot" />

    <ImageButton
        android:id="@+id/c_delete_depot_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_remove" />

    <TextView
        android:id="@+id/c_depot_name_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/c_depot_value_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="@dimen/normal_text_size" />

</LinearLayout>