<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <EditText
            android:id="@+id/char_name_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/char_name"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/concept_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/char_name_text"
            android:ems="10"
            android:hint="@string/concept"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/nature_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nature_label"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/generation_picker"
            android:layout_alignTop="@+id/nature_label"
            android:layout_below="@+id/concept_text"
            android:layout_toEndOf="@+id/nature_label"
            android:entries="@array/nature_and_behavior" />

        <Spinner
            android:id="@+id/behavior_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/behavior_label"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/generation_picker"
            android:layout_alignTop="@+id/behavior_label"
            android:layout_below="@+id/nature_spinner"
            android:layout_toEndOf="@+id/behavior_label"
            android:entries="@array/nature_and_behavior" />

        <TextView
            android:id="@+id/behavior_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nature_spinner"
            android:gravity="center_vertical"
            android:paddingBottom="12sp"
            android:paddingTop="10sp"
            android:text="@string/nature_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nature_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/concept_text"
            android:gravity="center_vertical"
            android:paddingBottom="12sp"
            android:paddingTop="10sp"
            android:text="@string/behavior_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/clan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/behavior_spinner"
            android:gravity="center_vertical"
            android:paddingBottom="12sp"
            android:paddingTop="10sp"
            android:text="@string/clan_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/generation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/clan_spinner"
            android:gravity="center_vertical"
            android:paddingBottom="70sp"
            android:paddingTop="70sp"
            android:text="@string/generation_text"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/clan_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/clan_label"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/generation_picker"
            android:layout_alignTop="@+id/clan_label"
            android:layout_below="@+id/behavior_spinner"
            android:layout_toEndOf="@+id/clan_label" />

        <NumberPicker
            android:id="@+id/generation_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/generation_label"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/generation_label"
            android:layout_below="@+id/clan_spinner"
            android:layout_toEndOf="@+id/generation_label" />

        <Button
            android:id="@+id/show_attributes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/generation_picker"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:text="@string/attributes"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/attributes_panel"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignEnd="@+id/show_attributes"
            android:layout_alignStart="@+id/show_attributes"
            android:layout_below="@+id/show_attributes"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/show_abilities"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/attributes_panel"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:text="@string/abilities"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/abilities_panel"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignEnd="@+id/show_abilities"
            android:layout_alignStart="@+id/show_abilities"
            android:layout_below="@+id/show_abilities"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/show_disciplines"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abilities_panel"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:text="@string/disciplines"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/disciplines_panel"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignEnd="@+id/show_disciplines"
            android:layout_alignStart="@+id/show_disciplines"
            android:layout_below="@+id/show_disciplines"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/show_backgrounds"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disciplines_panel"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:text="@string/backgrounds"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/backgrounds_panel"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignEnd="@+id/show_backgrounds"
            android:layout_alignStart="@+id/show_backgrounds"
            android:layout_below="@+id/show_backgrounds"
            android:orientation="vertical" >

            <Button
                android:id="@+id/add_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/add_background" />
        </LinearLayout>

        <Button
            android:id="@+id/show_properties"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backgrounds_panel"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:text="@string/properties"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/properties_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignEnd="@+id/show_properties"
            android:layout_alignStart="@+id/show_properties"
            android:layout_below="@id/show_properties"
            android:orientation="vertical" >

            <Button
                android:id="@+id/add_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/add_property" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>