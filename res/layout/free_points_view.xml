<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/free_points_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ProgressBar
            android:id="@+id/free_points_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/free_points_text" />

        <LinearLayout
            android:id="@+id/free_points_simple_items_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/free_points_bar"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/free_points_disciplines_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/free_points_simple_items_panel"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/free_points_backgrounds_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/free_points_disciplines_panel"
            android:orientation="vertical" />

        <TableLayout
            android:id="@+id/volition_and_path_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/free_points_backgrounds_panel" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/volition_label"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/volition_points"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Space />

                <ImageButton
                    android:id="@+id/decrease_volition"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/volition_points"
                    android:src="@android:drawable/ic_media_previous" />

                <TextView
                    android:id="@+id/volition_value"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageButton
                    android:id="@+id/increase_volition"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/volition_points"
                    android:src="@android:drawable/ic_media_next" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <CheckBox 
                    android:id="@+id/enable_path_checkbox"
                    android:text="@string/path_points"
                     />

                <Spinner
                    android:id="@+id/path_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/paths" />
                
                <ImageButton
                    android:id="@+id/decrease_path"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/path_points"
                    android:src="@android:drawable/ic_media_previous" />

                <TextView
                    android:id="@+id/path_value"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageButton
                    android:id="@+id/increase_path"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/path_points"
                    android:src="@android:drawable/ic_media_next" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/show_creation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/volition_and_path_spinner"
            android:text="@string/back" />

        <Button
            android:id="@+id/reset_temp_points_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/volition_and_path_spinner"
            android:layout_toRightOf="@id/show_creation_button"
            android:text="@string/reset" />

        <Button
            android:id="@+id/show_descriptions_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/volition_and_path_spinner"
            android:layout_toRightOf="@id/reset_temp_points_button"
            android:text="@string/next" />
    </RelativeLayout>

</ScrollView>