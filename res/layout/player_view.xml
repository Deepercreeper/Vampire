<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/view_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/view_player_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/view_player_controller_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/items" />

        <LinearLayout
            android:id="@+id/view_player_controller_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/view_kick_button"
                style="@style/BarButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kick" />

            <Button
                android:id="@+id/view_ban_button"
                style="@style/BarButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ban" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />
    </LinearLayout>

</LinearLayout>