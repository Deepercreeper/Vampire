<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/basic_info_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/basic_info"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/char_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/basic_info_label"
            android:ems="10"
            android:hint="@string/char_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/concept_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/char_name_text"
            android:ems="10"
            android:hint="@string/concept"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/nature_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/concept_text" />

        <Spinner
            android:id="@+id/behavior_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/nature_spinner" />

        <Spinner
            android:id="@+id/clan_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/behavior_spinner" />

        <LinearLayout
            android:id="@+id/generation_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/clan_spinner"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/nature_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/nature_spinner"
            android:layout_alignParentLeft="true"
            android:text="@string/behavior_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/behavior_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/behavior_spinner"
            android:layout_alignParentLeft="true"
            android:text="@string/nature_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/clan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/clan_spinner"
            android:layout_alignParentLeft="true"
            android:text="@string/clan_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/generation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/generation_panel"
            android:layout_alignBottom="@id/generation_panel"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="@string/generation_text"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/controllers_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/generation_panel"
            android:orientation="vertical" />

        <Button
            android:id="@+id/back_to_main_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/controllers_panel"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/next_to_2_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/controllers_panel"
            android:layout_toRightOf="@id/back_to_main_button"
            android:text="@string/next" />
    </RelativeLayout>

</ScrollView>